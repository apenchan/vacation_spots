<h3>Choose Your Destination!</h3>
<% @spots.each do |spot| %>
  <ul>
    <li><%= image_tag spot.img %></li>
    <li><%= spot.city %></li>
    <li><%= spot.country %></li>
    <li><%= link_to "Learn more about destination", spot_path(spot.id) %></li>
  </ul>
<%end%>
<div class="new-location">
  <%= link_to "Add a new vacation spot!", new_spot_path %>
</div>
